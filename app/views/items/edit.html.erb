<h1>Edit <%= @item.name %></h1>
<%= form_with url: "/merchant/#{@item.merchant.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
    <%= f.label :name, "Item" %>
    <%= f.text_field :name, value: "#{@item.name}" %>
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, value: "#{@item.description}" %>
    <%= f.label :unit_price, "Unit Price" %>
    <%= f.text_field :unit_price, value: "#{@item.unit_price}" %>
    <%= f.submit 'Submit'%>
<% end %>